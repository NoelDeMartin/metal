#!/bin/bash

if [ -z "$METAL_HOME" ]
then
    echo "METAL_HOME env variable not set"
    exit
fi

export PROJECT_PATH=`pwd`

case "$1" in
    "build")
        bash "$METAL_HOME/src/build.sh"
        ;;
    "up")
        bash "$METAL_HOME/src/up.sh"
        ;;
    "down")
        bash "$METAL_HOME/src/down.sh"
        ;;
    "shell")
        bash "$METAL_HOME/src/shell.sh"
        ;;
    *)
        echo "Unknown command \"$1\""
        ;;
esac
